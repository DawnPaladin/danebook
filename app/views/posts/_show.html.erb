<div class="danebook-post panel panel-default">
  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="/assets/user_silhouette_generic.gif" alt="" height="50">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><a href="#"><%= post.user.name %></a></h4>
      <time>Posted on <%= post.created_at.strftime('%c') %></time>
    </div>
  </div>
  <div class="panel-body">
    <p><%= post.body %></p>
  </div>
  <div class="panel-footer">
    <a href="#" class="like">Like</a>
    <a href="#">Comment</a>
    <a href="#" class="pull-right">Delete</a>
  </div>
</div>
