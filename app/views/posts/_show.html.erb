<div class="danebook-post panel panel-default">
  <div class="media">
    <div class="media-left">
      <a href="#">
        <%= image_tag 'user_silhouette_generic.gif', class: 'media-object', alt:'', height:50 %>
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><a href="#"><%= post.user.name %></a></h4>
      <time>Posted on <%= post.created_at.strftime('%c') %></time>
    </div>
  </div>
  <div class="panel-body">
    <p><%= post.body %></p>
  </div>
  <div class="panel-footer">
    <a class="like">Like</a>
    <a>Comment</a>
    <%= link_to "Delete", user_post_delete_path(@user.id, post.id), class: "pull-right" %>
  </div>
</div>
