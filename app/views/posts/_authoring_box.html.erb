<%= form_tag user_posts_path(current_user), method: :post do %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Post</h3>
    </div>
    <div class="form-group" style="padding: 1em">
      <%= text_area_tag(
          :search,
          params[:search],
          placeholder: "Tell the world something...",
          class: "form-control",
          rows: 3
      ) %>
    </div>
    <div class="panel-footer text-right">
      <%= submit_tag "Post", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
